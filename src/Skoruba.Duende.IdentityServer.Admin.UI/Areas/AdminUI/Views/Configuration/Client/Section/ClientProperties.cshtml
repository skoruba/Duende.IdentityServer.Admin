@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.Duende.IdentityServer.Admin.UI.Configuration.Constants
@model Skoruba.Duende.IdentityServer.Admin.BusinessLogic.Dtos.Configuration.ClientDto
@inject IViewLocalizer Localizer

<div class="card mt-3">
    <h5 class="card-header">@Localizer["PanelTitle"]</h5>
    <div class="card-body">
        <!--Button-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Client/Section/Label", "Properties")
            </label>
            <div class="col-sm-9">
                <a asp-area="@CommonConsts.AdminUIArea" asp-action="ClientProperties" asp-route-id="@Model.Id" target="_blank" class="btn btn-primary">@Localizer["ButtonManageClientProperties"]</a>
            </div>
        </div>
    </div>
</div>