{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Error",
            "Override": {
                "Skoruba": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Log/skoruba_admin.txt",
                    "rollingInterval": "Day"
                }
            },
          {            
            "Name": "MSSqlServer",
            "Args": {
              "connectionString": "Server=com-dev06;Database=IdentityServerAdmin;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
              "tableName": "Log",
              "columnOptionsSection": {
                "addStandardColumns": [ "LogEvent" ],
                "removeStandardColumns": [ "Properties" ]
              }
            }
          }
        ]
    }
}