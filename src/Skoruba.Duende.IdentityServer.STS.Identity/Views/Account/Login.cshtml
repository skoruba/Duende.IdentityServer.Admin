                                            <path
                                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                                fill="currentColor" />
                                        </svg>
                                    }
                                    else if (providerName.Contains("microsoft") || providerName.Contains("azure"))
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5">
                                            <path d="M11.4 24H0V12.6h11.4V24zM24 24H12.6V12.6H24V24zM11.4 11.4H0V0h11.4v11.4zm12.6 0H12.6V0H24v11.4z" fill="currentColor" />
                                        </svg>
                                    }
                                    <span class="text-sm">@provider.DisplayName</span>
                                </a>
                            }
                        </div>
                    }
                </form>
            }

            @if (!Model.EnableLocalLogin && Model.VisibleExternalProviders.Any())
            {
                <div class="space-y-6">
                    <div class="flex flex-col items-center gap-2 text-center">
                        <a href="/" class="flex flex-col items-center gap-2 font-medium">
                            <div class="flex h-24 w-24 items-center justify-center rounded-md">
                                <img src="@UrlHelper.Content(RootConfiguration.AdminConfiguration.HomePageLogoUri)" alt="Logo" class="mx-auto h-18 w-auto mb-4 opacity-90 dark:invert" />
                            </div>
                            <span class="sr-only">@RootConfiguration.AdminConfiguration.PageTitle</span>
                        </a>
                        <h1 class="text-xl font-bold">@Localizer["Title"]</h1>
                    </div>

                    @await Html.PartialAsync("_ValidationSummary")

                    <div class="grid gap-4 @(Model.VisibleExternalProviders.Count() > 1 ? "sm:grid-cols-2" : "")">
                        @foreach (var provider in Model.VisibleExternalProviders)
                        {
                            var providerName = provider.DisplayName?.ToLower() ?? provider.AuthenticationScheme.ToLower();
                            <a asp-action="ExternalLogin"
