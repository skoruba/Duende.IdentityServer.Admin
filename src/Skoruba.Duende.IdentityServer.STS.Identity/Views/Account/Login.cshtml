@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.Duende.IdentityServer.STS.Identity.Configuration.Interfaces
@using Skoruba.Duende.IdentityServer.STS.Identity.Helpers.Localization
@inject IViewLocalizer Localizer
@model Skoruba.Duende.IdentityServer.STS.Identity.ViewModels.Account.LoginViewModel
@inject IRootConfiguration RootConfiguration

<div class="bg-background flex min-h-[calc(100vh-300px)] flex-col items-center justify-center gap-6 py-8 px-6 md:px-10">
    <div class="w-full max-w-sm">
        <div class="flex flex-col gap-6">
            @if (Model.EnableLocalLogin)
            {
                <form asp-route="Login" class="space-y-6">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="flex flex-col items-center gap-2 text-center">
                        <a href="/" class="flex flex-col items-center gap-2 font-medium">
                            <div class="flex h-24 w-24 items-center justify-center rounded-md">
                                <img src="@UrlHelper.Content(RootConfiguration.AdminConfiguration.HomePageLogoUri)" alt="Logo" class="mx-auto h-18 w-auto mb-4 opacity-90 dark:invert" />
                            </div>
                            <span class="sr-only">@RootConfiguration.AdminConfiguration.PageTitle</span>
                        </a>
                        <h1 class="text-xl font-bold">@Localizer["Title"]</h1>
                        @if (RootConfiguration.RegisterConfiguration.Enabled)
                        {
                            <p class="text-sm text-muted-foreground">
                                @Localizer["NoAccount"] 
                                <a asp-action="Register" asp-controller="Account" class="text-primary hover:underline font-medium">@Localizer["SignUp"]</a>
                            </p>
                        }
                    </div>

                    @await Html.PartialAsync("_ValidationSummary")

                    <div class="form-item">
                        <label class="form-label" for="Username">
                            <lucideicon name="user" class="inline-block h-4 w-4 mr-1" />
                            @Localizer[LoginPolicyResolutionLocalizer.GetUserNameLocalizationKey(Model.LoginResolutionPolicy)]
                        </label>
                        <input id="Username" class="input" asp-for="Username" autofocus tw-validation />
                    </div>
                    
                    <div class="form-item">
                        <label class="form-label" for="Password">
                            <lucideicon name="lock" class="inline-block h-4 w-4 mr-1" />
                            @Localizer["Password"]
                        </label>
                        <input id="Password" type="password" class="input" asp-for="Password" autocomplete="off" tw-validation />
                    </div>

                    @if (Model.AllowRememberLogin)
                    {
                        <div class="flex items-center space-x-2">
                            <input asp-for="RememberLogin" type="checkbox" class="checkbox" id="RememberLogin" />
                            <label for="RememberLogin" class="label cursor-pointer text-sm">
                                @Localizer["Remember"]
                            </label>
                        </div>
                    }

                    <div class="form-item">
                        <button type="submit" name="button" value="login" class="btn-default w-full">
                            <lucideicon name="log-in" class="inline-block h-4 w-4 mr-2" />
                            @Localizer["Login"]
                        </button>
                    </div>

                    <div class="flex justify-between text-sm">
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-primary hover:underline inline-flex items-center gap-1">
                            <lucideicon name="key" class="h-3 w-3" />
                            @Localizer["Forgot"]
                        </a>
                        <button type="submit" name="button" value="cancel" class="text-primary hover:underline inline-flex items-center gap-1">
                            <lucideicon name="x" class="h-3 w-3" />
                            @Localizer["Cancel"]
                        </button>
                    </div>

                    @if (Model.VisibleExternalProviders.Any())
                    {
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <span class="w-full border-t border-border"></span>
                            </div>
                            <div class="relative flex justify-center text-xs uppercase">
                                <span class="bg-background px-2 text-muted-foreground">@Localizer["Or"]</span>
                            </div>
                        </div>

                        <div class="grid gap-4 @(Model.VisibleExternalProviders.Count() > 1 ? "sm:grid-cols-2" : "")">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                var providerName = provider.DisplayName?.ToLower() ?? provider.AuthenticationScheme.ToLower();
                                <a asp-action="ExternalLogin"
                                   asp-route-provider="@provider.AuthenticationScheme"
                                   asp-route-returnUrl="@Model.ReturnUrl"
                                   class="btn-outline flex items-center justify-center gap-2">
                                    @if (providerName.Contains("apple"))
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5">
                                            <path
                                                d="M12.152 6.896c-.948 0-2.415-1.078-3.96-1.04-2.04.027-3.91 1.183-4.961 3.014-2.117 3.675-.546 9.103 1.519 12.09 1.013 1.454 2.208 3.09 3.792 3.039 1.52-.065 2.09-.987 3.935-.987 1.831 0 2.35.987 3.96.948 1.637-.026 2.676-1.48 3.676-2.948 1.156-1.688 1.636-3.325 1.662-3.415-.039-.013-3.182-1.221-3.22-4.857-.026-3.04 2.48-4.494 2.597-4.559-1.429-2.09-3.623-2.324-4.39-2.376-2-.156-3.675 1.09-4.61 1.09zM15.53 3.83c.843-1.012 1.4-2.427 1.245-3.83-1.207.052-2.662.805-3.532 1.818-.78.896-1.454 2.338-1.273 3.714 1.338.104 2.715-.688 3.559-1.701"
                                                fill="currentColor" />
                                        </svg>
                                    }
                                    else if (providerName.Contains("google"))
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5">
                                            <path
                                                d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"
                                                fill="currentColor" />
                                        </svg>
                                    }
                                    else if (providerName.Contains("github"))
