@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = Localizer["Title"];
}

<section class="space-y-6 max-w-2xl">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">@ViewData["Title"]</h2>
        </div>

        <div class="card-content space-y-6">
            <div class="alert-default">
                <lucideicon name="info" class="h-4 w-4" />
                <div>
                    <div class="alert-title">@Localizer["SubTitle"]</div>
                    <div class="alert-description space-y-2">
                        <p>@Localizer["LostInfo"]</p>
                        <p>@Localizer["GenerateRecoveryCodeInfo"] <a asp-action="ResetAuthenticatorWarning" class="underline underline-offset-4">@Localizer["ResetKeys"]</a></p>
                    </div>
                </div>
            </div>

            <form asp-action="GenerateRecoveryCodes" method="post">
                <button class="btn-destructive" type="submit">
                    <lucideicon name="refresh-cw" class="inline-block h-4 w-4 mr-2" />
                    @Localizer["GenerateCodes"]
                </button>
            </form>
        </div>
    </div>
</section>
